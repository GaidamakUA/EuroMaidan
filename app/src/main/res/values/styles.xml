<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextView</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_login_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textColorHint">@color/light_blue</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AutoCompleteTextView" parent="android:Widget.AutoCompleteTextView">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textColorHint">@color/light_blue</item>
        <item name="android:dropDownSelector">@drawable/drop_down_selector</item>
        <item name="android:popupBackground">@color/light_blue</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewForgotPassStyle">
        <item name="android:text">@string/forgot_password</item>
        <item name="android:textSize">@dimen/textSizeSmaller</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="LogoStyle">
        <item name="android:src">@drawable/em_logo</item>
        <item name="android:layout_height">@dimen/logoHeightWidth</item>
        <item name="android:layout_width">@dimen/logoHeightWidth</item>
    </style>

    <style name="editTextAndButtonDimensions">
        <item name="android:layout_height">@dimen/editTextAndButtonHeight</item>
        <item name="android:layout_width">@dimen/loginComponentWidth</item>
        <item name="android:layout_marginTop">@dimen/topBottomMargin</item>
    </style>

    <style name="editTextAndButtonDimensionsLowSpacing">
        <item name="android:layout_height">@dimen/editTextAndButtonHeight</item>
        <item name="android:layout_width">@dimen/loginComponentWidth</item>
        <item name="android:layout_marginTop">@dimen/topBottomMarginLow</item>
    </style>

    <style name="datePickerButton" parent="editTextAndButtonDimensionsLowSpacing">
        <item name="android:layout_width">@dimen/loginComponentWidth</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="sexRadioGroup" parent="editTextAndButtonDimensionsLowSpacing">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="sexRadioButton">
        <item name="android:layout_height">@dimen/editTextAndButtonHeight</item>
        <item name="android:background">@drawable/sex_radio_button</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <style name="familyStatusRadioButton">
        <item name="android:button">@drawable/family_status_radio_button</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="TextView" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/textSizeSmaller</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:drawablePadding">30dp</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="SearchStyle" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/search_bg</item>
        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:drawableLeft">@drawable/search_icon</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textSize">@dimen/textSizeSmaller</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SearchStyleActionBar" parent="SearchStyle">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/light_blue</item>
    </style>
    
    <style name="NewMessageEditText">
        <item name="android:layout_height">@dimen/editTextAndButtonHeight</item>
        <item name="android:background">@drawable/new_message_edit_text_bg</item>
    </style>

</resources>
