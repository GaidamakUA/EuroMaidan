<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/new_message_container"
        android:background="@color/grey_bg"
        android:id="@+id/messages_recycler_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/listItemHeight"
        android:id="@+id/new_message_container"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/touchTargetSmallHeightWidth"
            android:layout_height="@dimen/touchTargetSmallHeightWidth"
            android:padding="@dimen/touchTargetSmallPadding"
            android:layout_marginLeft="@dimen/listImageLeftRightMargin"
            android:layout_marginStart="@dimen/listImageLeftRightMargin"
            android:layout_marginRight="@dimen/listImageLeftRightMargin"
            android:layout_marginEnd="@dimen/listImageLeftRightMargin"/>
        <EditText
            android:layout_width="0dp"
            style="@style/NewMessageEditText"
            android:layout_weight="0.7"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/listImageLeftRightMargin"
            android:layout_marginStart="@dimen/listImageLeftRightMargin"
            android:layout_marginRight="@dimen/listImageLeftRightMargin"
            android:layout_marginEnd="@dimen/listImageLeftRightMargin"
            android:singleLine="true"
            android:text="Отправить"
            android:ellipsize="end"
            android:layout_weight="0.18"
            android:textColor="@color/darker_grey"/>
    </LinearLayout>
</RelativeLayout>