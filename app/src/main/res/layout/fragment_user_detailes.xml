<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">

    <ScrollView
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/save_button"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nameDetails"
                style="@style/editTextAndButtonDimensionsLowSpacing"
                android:layout_gravity="center_horizontal"
                android:hint="@string/name" />

            <EditText
                android:id="@+id/surnameDetails"
                style="@style/editTextAndButtonDimensionsLowSpacing"
                android:layout_gravity="center_horizontal"
                android:hint="@string/surname" />

            <RadioGroup
                android:id="@+id/genderGroup"
                style="@style/sexRadioGroup"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="1">

                <RadioButton
                    android:id="@+id/rb_female"
                    style="@style/sexRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_weight=".5"
                    android:checked="true"
                    android:gravity="center"
                    android:text="@string/female" />

                <RadioButton
                    android:id="@+id/rb_male"
                    style="@style/sexRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text="@string/male" />
            </RadioGroup>

            <Button
                android:id="@+id/btn_birthday"
                style="@style/datePickerButton"
                android:layout_height="wrap_content"
                android:text="@string/pickBirthDate" />

            <EditText
                android:id="@+id/native_city"
                style="@style/editTextAndButtonDimensionsLowSpacing"
                android:layout_gravity="center_horizontal"
                android:hint="@string/native_city" />

            <RadioGroup
                android:id="@+id/relationshipGroup"
                android:layout_width="@dimen/loginComponentWidth"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/topBottomMarginLow">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/family_status"
                    android:textColor="@color/light_blue"
                    android:textSize="@dimen/textSize" />

                <RadioButton
                    android:id="@+id/relationSingle"
                    style="@style/familyStatusRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/single" />

                <RadioButton
                    android:id="@+id/relationDating"
                    style="@style/familyStatusRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dating" />

                <RadioButton
                    android:id="@+id/relationEngaged"
                    style="@style/familyStatusRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/engaged" />

                <RadioButton
                    android:id="@+id/relationMarried"
                    style="@style/familyStatusRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/married" />

                <RadioButton
                    android:id="@+id/relationInLove"
                    style="@style/familyStatusRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/in_love" />

                <RadioButton
                    android:id="@+id/relationComplicated"
                    style="@style/familyStatusRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/its_complicated" />

                <RadioButton
                    android:id="@+id/relationActiveSearch"
                    style="@style/familyStatusRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/in_active_search" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/save_button"
        style="@style/editTextAndButtonDimensions"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="@string/save" />

</RelativeLayout>