<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstRunActivity">

    <FrameLayout
        android:id="@+id/fragment_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
    android:id="@+id/left_drawer"
    android:layout_width="240dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/drawer_scrollable_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fail_background_user"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/avatar_border"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Дарт Вейдер"
                android:textSize="@dimen/textSize" />

            <EditText style="@style/SearchStyle" />

            <TextView
                android:id="@+id/news_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:drawableLeft="@drawable/news_icon"
                android:drawableStart="@drawable/news_icon"
                android:text="@string/news" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:drawableLeft="@drawable/message_icon"
                android:drawableStart="@drawable/message_icon"
                android:text="@string/message" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:drawableLeft="@drawable/friends_icon"
                android:drawableStart="@drawable/friends_icon"
                android:text="@string/friends" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:drawableLeft="@drawable/groups_icon"
                android:drawableStart="@drawable/groups_icon"
                android:text="@string/groups" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:drawableLeft="@drawable/photo_icon"
                android:drawableStart="@drawable/photo_icon"
                android:text="@string/photos" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:drawableLeft="@drawable/video_icon"
                android:drawableStart="@drawable/video_icon"
                android:text="@string/video" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:drawableLeft="@drawable/audio_icon"
                android:drawableStart="@drawable/audio_icon"
                android:text="@string/audio" />

            <TextView
                android:id="@+id/settings_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:drawableLeft="@drawable/settings_icon"
                android:drawableStart="@drawable/settings_icon"
                android:text="@string/settings"
                android:textAppearance="?android:textAppearanceLarge" />
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.DrawerLayout>
