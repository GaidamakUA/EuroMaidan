<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listItemHeight"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/touchTargetHeightWidth"
        android:layout_height="@dimen/touchTargetHeightWidth"
        android:id="@+id/avatar_imageview"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="@dimen/listImageLeftRightMargin"
        android:layout_marginStart="@dimen/listImageLeftRightMargin"
        android:padding="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_name_textview"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/listContentLeftMargin"
        android:layout_marginStart="@dimen/listContentLeftMargin"/>

</RelativeLayout>