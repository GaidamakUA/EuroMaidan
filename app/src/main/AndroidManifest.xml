<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.com.studiovision.euromaidan">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="ua.com.studiovision.euromaidan.activities.LoginActivity_"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity
            android:name="ua.com.studiovision.euromaidan.activities.RegisterActivity_"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="ua.com.studiovision.euromaidan.activities.FirstRunActivity_"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".activities.FeedActivity_"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="ua.com.studiovision.euromaidan.activities.SearchActivity_"
            android:label="@string/app_name"/>
        <activity android:name="ua.com.studiovision.euromaidan.audio_player.AudioActivity_"
            android:label="@string/app_name"/>
        <service
            android:name="ua.com.studiovision.euromaidan.network.MainService_"
            android:enabled="true"
            android:exported="false"/>
        <service android:name="ua.com.studiovision.euromaidan.audio_player.AudioPlayerService_"
            android:enabled="true"
            android:exported="false"/>
        <provider
            android:name=".network.provider.EmContentProvider"
            android:authorities="ua.com.studiovision.euromaidan.network.provider"
            android:exported="false" />
    </application>

</manifest>
